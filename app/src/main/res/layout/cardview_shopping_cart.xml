<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/shoppingCardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/shoppingImg"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#2d2d2d"/>



        <TextView
            android:layout_toRightOf="@+id/shoppingImg"
            android:layout_alignParentTop="true"
            android:id="@+id/shoppingTitle"
            android:textColor="#2d2d2d"
            android:textSize="20sp"
            android:gravity="left"
            android:padding="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Title"/>

        <TextView
            android:layout_toRightOf="@+id/shoppingImg"
            android:layout_below="@+id/shoppingTitle"
            android:id="@+id/shoppingSalary"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Salary"/>

        <Button

            android:id="@+id/shoppingSalaryButton"

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shoppingSalary"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/mybotton"
            android:drawableEnd="@drawable/ic_delete_forever_black_24dp"
            android:text="Remove"
            android:textColor="#fff"
            android:textSize="10dp" />




    </RelativeLayout>

</android.support.v7.widget.CardView>